      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title" id="myModalLabel2"><i class="icon-road2"></i> </h4>
      </div>
      <div class="modal-body">
      <fieldset class="form-group position-relative has-icon-left mb-1">
        <select  class="form-control" name="j_status" id="j_status" required>
          <option disabled selected>Select Status</option>
          <option value="For Requirements">For Requirements</option>
          <option value="Incomplete Requirement">Incomplete Requirement</option>
          <option value="Hired">Hired</option>
        </select>
        <div class="form-control-position">
