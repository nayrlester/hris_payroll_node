<script>
	function updateStatusInterview(id,v_id)
	{
	  $('#rowid').val(id);
	  $('#v_id').val(v_id);
	  $('#StatusModal_update').modal('show');
	  $('.modal-title').text('Update Candidate Status');
  } 
  
  function updateStatusJob(n_id,v_id)
	{
	  $('#n_rowid').val(n_id);
	  $('#vacant_id').val(v_id);
	  $('#StatusJobModal_update').modal('show');
	  $('.modal-title').text('Update Candidate Status');
	} 

	function deleteStatus(id,v_id)
	{
	  $('#rowid_del').val(id);
	  $('#row_vacant_id').val(v_id);
	  $('#StatusModal_delete').modal('show');
	  $('.modal-title').text('Delete Candidate');
	} 

</script>
<div class="modal fade text-xs-left" id="StatusModal_delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
  <div class="modal-dialog" role="document">
  	<form class="form-horizontal form-simple" id="deleteVacancy" method="post" action="/deleteCompetency" novalidate>
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		  <span aria-hidden="true">&times;</span>
		</button>
		<h4 class="modal-title" id="myModalLabel2"><i class="icon-road2"></i> </h4>
	  </div>
	  <div class="modal-body">
  		<input type="hidden" name="rowid_del" id="rowid_del">
  		<input type="hidden" name="row_vacant_id" id="row_vacant_id">
		<p>
			Are you sure you want to delete Candidate?
		</p>
	  </div>
	  <div class="modal-footer">
		<button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-outline-primary">Delete</button>
	  </div>
	</div>
	</form>
  </div>
</div>

<div class="modal fade text-xs-left" id="StatusModal_update" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
  <div class="modal-dialog" role="document">
  	<form class="form-horizontal form-simple" id="updateVacancy" method="post" action="/updateCompCandidateInterview" novalidate>
  	<input type="hidden" name="rowid" id="rowid">
  	<input type="hidden" name="v_id" id="v_id">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		  <span aria-hidden="true">&times;</span>
		</button>
		<h4 class="modal-title" id="myModalLabel2"><i class="icon-road2"></i> </h4>
	  </div>
	  <div class="modal-body">
		<fieldset class="form-group position-relative has-icon-left mb-1">
			<select  class="form-control" name="status" id="status" required>
				<option disabled selected>Select Status</option>
				<option value="For Interview">For Interview</option>
				<option value="Passed">Passed</option>
				<option value="Failed">Failed</option>
			</select>
			<div class="form-control-position">
			    <i class="icon-list"></i>
			</div>
    </fieldset>
    <fieldset class="form-group position-relative has-icon-left mb-1">
        <input type="date" name="date_interview" id="date_interview" required class="form-control">
        <div class="form-control-position">
            <i class="icon-calendar"></i>
        </div>
      </fieldset>
	  </div>
	  <div class="modal-footer">
		<button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-outline-primary">Save changes</button>
	  </div>
	</div>
	</form>
  </div>
</div>

<div class="modal fade text-xs-left" id="StatusJobModal_update" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <form class="form-horizontal form-simple" id="updateStatusJob" method="post" action="/updateCompCandidateJob" novalidate>
      <input type="hidden" name="n_rowid" id="n_rowid">
